# ===========================================
# PUMP ME - Environment Variables
# ===========================================
# Copy this to .env and fill in your values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="postgresql://user:password@localhost:5432/pumpme?schema=public"

# ===========================================
# JWT & AUTH
# ===========================================
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# ===========================================
# STRIPE - Billing
# ===========================================
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_STARTER=""
STRIPE_PRICE_REGULAR=""
STRIPE_PRICE_PRO=""
STRIPE_PRICE_WHALE=""
STRIPE_PRICE_VPN=""
STRIPE_PRICE_HOME=""

# ===========================================
# FRONTEND
# ===========================================
FRONTEND_URL="http://localhost:3000"
CORS_ORIGIN="http://localhost:3000"

# ===========================================
# API
# ===========================================
PORT=3001
NODE_ENV="development"

# ===========================================
# GPU PROVIDERS
# ===========================================

# Local Provider (Veron 1)
LOCAL_PROVIDER_ENABLED=true
LOCAL_PROVIDER_HOST="veron1.thewindstorm.uk"
LOCAL_OLLAMA_URL="http://veron1.thewindstorm.uk:11434"

# Vast.ai Provider
VAST_API_KEY=""
VAST_ENABLED=false

# RunPod Provider
RUNPOD_API_KEY=""
RUNPOD_ENABLED=false

# Lambda Labs Provider
LAMBDA_API_KEY=""
LAMBDA_ENABLED=false

# ===========================================
# REDIS (Session Cache)
# ===========================================
REDIS_URL="redis://localhost:6379"

# ===========================================
# MONITORING
# ===========================================
LOG_LEVEL="info"
SENTRY_DSN=""

# ===========================================
# OAUTH (Optional)
# ===========================================
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""
